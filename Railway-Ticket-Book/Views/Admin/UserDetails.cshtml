@model List<Railway_Ticket_Book.Context.customer>
@{
    ViewBag.Title = "UserDetails";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<head>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            background-image: url('../../img/userDeatilsBack.jpg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: 100%;
            font-size: 15px;
        }
        .U1, .U2 {
            width: 195px;
            float: left;
            color: #2ECC71;
            padding-left: 10px;
            padding-top: 10px;
        }
        .Uc4, .Uc6 {
            padding-left: 10px;
            padding-top: 10px;
            color: #2ECC71;
        }
        .U3 {
            padding-left: 10px;
            padding-top: 10px;
            width: 200px;
            float: left;
            color: #2ECC71;
        }
        .Uc2 {
            height: 8px;
            border-top-left-radius: 5px;
            border-top-right-radius: 5px;
            background-color: white;
            box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
        }
        .Uc7 {
            height: 8px;
            border-bottom-left-radius: 5px;
            border-bottom-right-radius: 5px;
            background-color: white;
            margin-bottom: 20px;
            box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
        }
        .U4 {
            color: #2ECC71;
            padding-left: 10px;
            padding-top: 10px;
        }
        .Uc3, .Uc4, .Uc5, .Uc6 {
            background-color: white;
            box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
        }
        .Uc1{
            position:absolute;
            top:15%;
            left:40%;
        }
    </style>
</head>

<div class="Uc1">

    @foreach (var item in Model)
    {
        <div class="Uc2">
        </div>
        <div class="Uc3">
            <div class="U1">
                First Name<br />
                <b>@item.FName</b>
            </div>
            <div class="U2">
                Last Name<br />
                         <b> @item.LName</b>
            </div>
        </div>
        <div class="Uc4">
            NID:<b>@item.NID</b>
        </div>
        <div class="Uc5">
            <div class="U3">
                Contact No:<b>@item.TYP</b>
            </div>
            <div class="U4">
                Date Of Birth:<b>@item.DOB.Value.ToShortDateString()</b>
            </div>
        </div>
        <div class="Uc6">
            Email:<b>@item.Main</b>
        </div>
        <div class="Uc7">
        </div>
    }

</div>

