@model List<Railway_Ticket_Book.Context.vehicle>
@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>responsiveTT</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            
            font-family: sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
           
            background-image: url('../../img/TrainListBack.jpg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            
            background-size: 100%;
        }

        .table-container {
           margin-top:160px;
        }

        .heading {
            margin-top:60px;
            font-size: 40px;
            text-align: center;
            color: #000000;
            
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

            .table thead {
                background-color: #ee2828;
            }

                .table thead tr th {
                    font-size: 14px;
                    font-weight: 600;
                    letter-spacing: 0.35px;
                    color: #FFFFFFFF;
                    opacity: 1;
                    padding: 12px;
                    vertical-align: top;
                    text-align: center;
                    border: 1px solid #dee2e685;
                }

            .table tbody tr td {
                font-size: 14px;
                letter-spacing: 0.35px;
                font-weight: normal;
                color: #f1f1f1;
                background-color: #3c3f44;
                padding: 8px;
                text-align: center;
                border: 1px solid #dee2e685;
            }

                .table tbody tr td .btn {
                    width: 80px;
                    text-decoration: none;
                    line-height: 20px;
                    display: inline-block;
                    background-color: #FF1046;
                    font-weight: normal;
                    color: #ffffff;
                    text-align: center;
                    vertical-align: middle;
                    user-select: none;
                    border: 1px solid transparent;
                    font-size: 12px;
                    opacity: 1;
                }

        @@media (max-width: 768px) {
            .table thead {
                display: none;
            }

            .table, .table tbody, .table tr, .table td {
                display: block;
                width: 100%;
            }

                .table tr {
                    margin-bottom: 15px;
                }

                .table tbody tr td {
                    text-align: right;
                    padding-left: 50%;
                    position: relative;
                }

                .table td:before {
                    content: attr(data-label);
                    position: absolute;
                    left: 0;
                    width: 50%;
                    padding-left: 15px;
                    font-weight: 600;
                    font-size: 14px;
                    text-align: left;
                }
        }
    </style>
</head>
<body>
    <div class="table-container">
        
        <table class="table">
            <thead>
                <tr>
                    <th>Train Name</th>
                    <th>Route</th>
                    <th>Ac Seats, Price</th>
                    <th>S_chair , Price</th>
                    <th>Cabin,Price</th>
                    <th>Date Time</th>
                    <th>Admin Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td data-label="Train Name">@item.RNm</td>
                        <td data-label="Route">@item.s_start To @item.s_des</td>
                        <td data-label="Ac Seats , Price">@item.A_seat    |    @item.A_F$</td>
                        <td data-label="S_chair Seats , Price">@item.N_seat    |    @item.B_F$</td>
                        <td data-label="Cabin Seats ,price">@item.C_seat    |    @item.C_F$</td>
                        <td data-label="Date And Time">@item.ar_date.Value.ToShortDateString()    @item.R_tm</td>
                        <td data-label="Admin Action">
                            <a href="@Url.Action("UpdateTrain", new { item.RailId, item.RNm, item.s_start, item.s_des, item.ar_date, item.A_seat,item.N_seat,item.C_seat,item.A_F,item.B_F,item.C_F,item.R_tm})" class="btn">EDIT</a>
                            <a href="@Url.Action("Delete", new {item.RailId, item.RNm, item.s_start, item.s_des, item.ar_date, item.A_seat,item.N_seat,item.C_seat,item.A_F,item.B_F,item.C_F,item.R_tm})" class="btn">DELETE</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

