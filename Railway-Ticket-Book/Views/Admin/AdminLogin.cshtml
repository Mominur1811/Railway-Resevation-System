@model Railway_Ticket_Book.Context.LoginViewModel
@{
    ViewBag.Title = "AdminLogin";
}


<style>

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: sans-serif;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        background-image: url('../../img/adminPanel.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: 100%;
    }
    .box {
        width: 400px;
        padding: 30px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);
        background-color:white;
        text-align: center;
        border-radius: 10px;
    }

    .form-control {
        border: 0;
        background: none;
        display: block;
        text-align: center;
        margin-left: 75px;
        margin-bottom: 10px;
        border: 2px solid #008000;
        width: 220px;
        height: 45px;
        outline: none;
        color: #00cc00;
        border-radius: 15px;
    }

        .form-control:focus {
            width: 230px;
            border-color: #ffc400ec;
        }

    .ppp {
        float: left;
        width: 10em;
        margin-right: 1em;
        margin-left: 40px;
        color:#009900;
    }

    .btn {
        border: 0;
        background: none;
        display: block;
        margin-left: 20px;
        text-align: center;
        border: 3px solid #008000;
        width: 180px;
        height: 45px;
        padding: 14px 10px;
        outline: none;
        color: #009900;
        border-radius: 15px;
        cursor: pointer;
    }
    h2{
        color:#009900;
    }
    hr{
        background-color:#009900;
    }
</style>




<div class="box">

    @using (Html.BeginForm("AdminLogin","Admin",FormMethod.Post))
    {
        

        <div class="form-horizontal">
            <h2>Login</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="ppp">Email</label>
                @Html.EditorFor(model => model.nam, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nam, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                <label class="ppp">Password</label>
                @Html.EditorFor(model => model.pass, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.pass, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="LOGIN" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>

