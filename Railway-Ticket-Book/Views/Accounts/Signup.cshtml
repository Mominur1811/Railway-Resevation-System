@model Railway_Ticket_Book.Context.customer

@{
    ViewBag.Title = "Signup";
}


<head>
    <style>
        body {
            background-color: #cfd9d68f;
        }

        .imgg {
            width: 400px;
            height: 600px;
            position: absolute;
            top: 20%;
            left: 10%;
        }

        .wr {
            margin: 0 0 0 60px;
        }

        .hello {
            max-width: 650px;
            width: 100%;
            padding: 25px 30px;
            position: absolute;
            top: 50%;
            left: 70%;
            border: none;
            transform: translate(-50%,-50%);
            background-color: white;
            text-align: center;
            display: flex;
            flex-wrap: wrap;
            border-radius: 5px;
            justify-content: space-between;
        }

        .box {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .form-control {
            border: 2px solid black;
            width: 220px;
        }

        .ppp {
            float: left;
            font-weight: 700;
            font-size: 14px;
            color: black;
        }

        hr {
            background-color: rgb(0,153,0);
            height: 1px;
        }

        .btn {
            width: 220px;
            background-color: rgb(0,153,0);
            margin-top: 22px;
        }
    </style>
    <link href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.12.1/themes/cupertino/jquery-ui.css" rel="stylesheet" />

    @section Scripts{

        @Scripts.Render("~/bundles/jqueryval")
        <script src="~/Scripts/jquery-3.4.1.min.js"></script>
        <script src="~/Scripts/jquery-ui-1.13.1.min.js"></script>
        <script>
            $(document).ready(function () {
                $("#DOBb").datepicker({

                    changeYear: true
                });
            }
            );
        </script>
    }
</head>
<body>
    <div class="imgg">
        <img src="~/img/Register.png" height="400" width="400"/>
        <div class="wr">
            <h2><b>Registration</b></h2>
            <h5>Register here and search for train<br /> and book it</h5>
        </div>
    </div>
<div class="hello">
    
@using (Html.BeginForm())
{
            @Html.AntiForgeryToken()
            <h2>Signup</h2>
            <hr />
            <br />
            <div class="box">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="ppp">First Name:</label>
                <br />
                @Html.EditorFor(model => model.FName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">

                <label class="ppp">Last Name:</label>
                <br />
                @Html.EditorFor(model => model.LName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">

                <label class="ppp">Email:</label>
                <br />
                @Html.EditorFor(model => model.Main, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Main, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">

                <label class="ppp">Date Of Birth:</label>
                <br />
                @Html.EditorFor(model => model.DOB, new { htmlAttributes = new { @class = "form-control",@type="Date" } })
                @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger"})
            </div>

            <div class="form-group">

                <label class="ppp">National Id No:</label>
                <br />
                @Html.EditorFor(model => model.NID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NID, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">

                <label class="ppp">Mobile No:</label>
                <br />
                @Html.EditorFor(model => model.TYP, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TYP, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">

                <label class="ppp">Password:</label>
                <br />
                @Html.EditorFor(model => model.Pword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Pword, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                
                    <input type="submit" value="Register" class="btn btn-default" />
            </div>
        </div>
}

</div>
</body>
