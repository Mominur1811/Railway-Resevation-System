@model Railway_Ticket_Book.Context.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<style>
    body {
        
        font-size: 16px;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        background-color: #cfd9d68f;
        background-image: url('../../img/LoginTrain.png');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: right bottom;
        background-size: 50%;
    }
    .box {
        width: 350px;
        padding: 15px;
        position: absolute;
        top: 50%;
        left: 40%;
        transform: translate(-50%,-50%);
        background: #FFFFFF;
        text-align: center;
        border-radius: 6px;
    }

    .form-control {
        border: 0;
        background: none;
        display: block;
        text-align: center;
        margin-left: 75px;
        margin-bottom: 10px;
        border: 2px solid #4DF652;
        width: 220px;
        height: 45px;
        outline: none;
        color: #000000;
        border-radius: 15px;
    }
        .form-control:focus {
            width: 230px;
            border-color: #ffc400ec;
        }
    .ppp {
        float: left;
        width: 10em;
        margin-right: 1em;
        margin-left:45px;
    }
    .btn {
        border: 0;
        background: #0DB512;
        display: block;
        margin-left: 20px;
        text-align: center;
        border: 1px solid #39F23F;
        width: 180px;
        height: 45px;
        padding: 14px 10px;
        outline: none;
        color: white;
        border-radius: 15px;
        cursor: pointer;
    }
    .hrr {
        border:1px solid #0DB512;
    }
    .regsr {
        color: #0DB512;
        text-align: center;
        font-size: 15px;
        font-weight: 700;
    }
    .regsr1 {
        color: #239B56;
    }
    .regsr2 {
        color: #FF0000;
    }
</style>




<div class="box">

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h2>Login</h2>
        <hr class="hrr" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
                <label class="ppp">User Mail</label>
                @Html.EditorFor(model => model.nam, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nam, "", new { @class = "text-danger" })
            
        </div>

        <div class="form-group">
                <label class="ppp">Password</label>
                @Html.EditorFor(model => model.pass, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.pass, "", new { @class = "text-danger" })
            
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="LOGIN" class="btn btn-default" />
            </div>
        </div>
        <div class="regsr">
            <a href="@Url.Action("forgetPassword","Accounts")" class="regsr2">Forget password</a>
            <br/>
            <a href="@Url.Action("Signup","Accounts")" class="regsr1">Click to Register</a>
        </div>
    </div>
}
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
