@model Railway_Ticket_Book.Context.test
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <style>

        .send_gmail {
            width: 650px;
            position: absolute;
            top: 70%;
            left: 25%;
            font-size: 18px;
            transform: translate(-50%,-50%);
            border:1px solid #00CC00;
            border-radius: 5px;
        }

        .header {
            height: 50px;
            padding-left: 30px;
            padding-top: 10px;
            padding-right: 10px;
            background-color: white;
            
            color: #00CC00;
        }

        .head1, .head2, .pName, .Tname {
            float: left;
        }

        .head3, .pTName, .ttFrom, .ttTo {
            float: right;
        }

        .tFrom, .tDate, .tTime, .tTo, .tPay, .tSeat, .tSeat1 {
            float: left;
        }

        .tbody1 {
            padding-left: 30px;
            padding-top: 5px;
            padding-right: 20px;
            height: 50px;
            background-color: white;
            color: #00CC00;
        }

        .tbody2 {
            padding-left: 30px;
            padding-top: 5px;
            padding-right: 20px;
            height: 50px;
            background-color: white;
            color: #00CC00;
        }

        .tbody3 {
            padding-left: 30px;
            padding-top: 5px;
            padding-right: 20px;
            height: 70px;
            background-color: white;
            margin-bottom: 20px;
            color: #00CC00;
        }

        .pName {
            width: 150px;
        }

        .tFrom, .tTo, .tPay, .tDate, .tTime {
            width: 150px;
        }

        .head2 {
            margin-left: 80px;
        }
    </style>


    
</head>
<body>
    <div class="send_gmail">

        <div class="header">
            <div class="head1">
                <img src="~/img/ticketTrain.png" height="30" width="40" />
            </div>
            <div class="head2">
                <b>TRAIN TICKET</b>
            </div>
        </div>
        <div class="tbody1">
            <div class="pName">
                PASSENGER<br />
                <b>@Model.passname</b>
            </div>
            <div class="Tname">
                TRAIN <br />
                <b> @Model.trainname</b>

            </div>
        </div>
        <div class="tbody2">
            <div class="tFrom">
                FROM<br />
                <b>@Model.pStart</b>
            </div>
            <div class="tDate">
                DATE<br />
                <b>@Model.pass_date.Value.ToShortDateString()</b>
            </div>
            <div class="tTime">
                DEPARATURE<br />
                <b>@Model.pass_time</b>
            </div>
        </div>
        <div class="tbody3">
            <div class="tTo">
                TO<br />
                <b>@Model.pDest</b>
            </div>
            <div class="tPay">
                Price<br />
                <b> @Model.amm$</b>
            </div>
            <div class="tSeat">
                SEAT<br />
                @{
                    if (Model.a_ticket!="0")
                    {
                        <div class="tSeat1"><b>Ac:@Model.a_ticket ,</b> </div>
                    }
                    if (Model.b_ticket!="0")
                    {
                        <div class="tSeat1"><b>S_Chair:@Model.b_ticket ,</b> </div>
                    }
                    if (Model.c_ticket!="0")
                    {
                        <div class="tSeat1"><b>Cabin:@Model.c_ticket</b> </div>
                    }

                }
            </div>
        </div>
    </div>
</body>
</html>
